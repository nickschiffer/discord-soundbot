{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "es6",
    "strict": true,
    "outDir": "dist",
    "lib": [
      "es2017"
    ],

    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@queue/*": ["src/queue/*"],
      "@util/*": ["src/util/*"]
    },
    "incremental": true
  },
  "include": [
    "src/**/*",
    "bin/**/*",
    "lib/**/*"
  ],

  "exclude": [
    "**/__jest__",
    "**/__mocks__"
  ]
}
